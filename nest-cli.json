{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "schematics": {
    "module": {
      "path": "src/modules",
      "flat": false
    },
    "controller": {
      "path": "src/modules",
      "flat": false
    },
    "service": {
      "path": "src/modules",
      "flat": false
    }
  }
}
